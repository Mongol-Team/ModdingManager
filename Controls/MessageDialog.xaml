<Window x:Class="Controls.MessageDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Controls"
        Title="{Binding Title}"
        Width="400"
        Height="Auto"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Style="{StaticResource ModalWindowDark}"
        ShowInTaskbar="False"
        SizeToContent="Height">
    <Grid Background="{StaticResource BackgroundModal}">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <controls:WindowTitleBar Grid.Row="0"/>
        
        <Grid Grid.Row="1" Margin="24,20,24,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Border Grid.Column="0"
                    Width="48"
                    Height="48"
                    Margin="0,0,16,0"
                    VerticalAlignment="Top"
                    HorizontalAlignment="Left">
                <Path x:Name="IconPath"
                      Width="32"
                      Height="32"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Center"
                      Stretch="Uniform"/>
            </Border>
            
            <TextBlock x:Name="MessageTextBlock"
                       Grid.Column="1"
                       Text="{Binding Message}"
                       TextWrapping="Wrap"
                       Foreground="{StaticResource TextPrimary}"
                       FontSize="{StaticResource FontSizeBody}"
                       VerticalAlignment="Top"
                       Margin="0,8,0,0"/>
        </Grid>
        
        <Border Grid.Row="2" 
                Height="1" 
                Background="{StaticResource DividerColor}" 
                Margin="0,20,0,0"/>
        
        <StackPanel Grid.Row="3" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Margin="24,16,24,24">
            <Button x:Name="OkButton"
                    Content="OK"
                    Style="{StaticResource ButtonDark}"
                    Width="80"
                    Height="32"
                    Margin="0,0,8,0"
                    Click="OkButton_Click"
                    IsDefault="True"/>
            <Button x:Name="CancelButton"
                    Content="Отмена"
                    Style="{StaticResource ButtonDark}"
                    Width="80"
                    Height="32"
                    Visibility="Collapsed"
                    Click="CancelButton_Click"
                    IsCancel="True"/>
            <Button x:Name="YesButton"
                    Content="Да"
                    Style="{StaticResource ButtonDark}"
                    Width="80"
                    Height="32"
                    Margin="0,0,8,0"
                    Visibility="Collapsed"
                    Click="YesButton_Click"/>
            <Button x:Name="NoButton"
                    Content="Нет"
                    Style="{StaticResource ButtonDark}"
                    Width="80"
                    Height="32"
                    Visibility="Collapsed"
                    Click="NoButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

