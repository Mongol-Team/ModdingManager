<UserControl x:Class="Controls.ProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="300"
             x:Name="root">
    <Grid>
        <Border x:Name="TrackBorder"
                Background="{StaticResource BackgroundElement}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="1"
                CornerRadius="2"
                Height="{Binding Height, ElementName=root}"/>
        
        <Border x:Name="ProgressBorder"
                Background="{Binding ProgressBrush, ElementName=root}"
                BorderBrush="Transparent"
                BorderThickness="0"
                CornerRadius="2"
                HorizontalAlignment="Left"
                Height="{Binding Height, ElementName=root}"
                Width="{Binding ProgressWidth, ElementName=root}"/>
        
        <TextBlock x:Name="ProgressTextBlock"
                   x:FieldModifier="private"
                   Text="{Binding DisplayText, ElementName=root}"
                   Foreground="{StaticResource TextPrimary}"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="{StaticResource FontSizeSmall}">
            <TextBlock.Style>
                <Style TargetType="TextBlock">
                    <Setter Property="Visibility" Value="Collapsed"/>
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ShowText, ElementName=root}" Value="True">
                            <Setter Property="Visibility" Value="Visible"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </TextBlock.Style>
        </TextBlock>
    </Grid>
</UserControl>

