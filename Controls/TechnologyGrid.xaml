<UserControl x:Class="Controls.TechnologyGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{StaticResource BackgroundApp}">
        <local:SceneViewer Grid.Column="1"
              x:Name="MainScrollViewer"
              HorizontalScrollBarVisibility="Auto"
              VerticalScrollBarVisibility="Auto" Margin="0,0,0,0" Drop="TechTreeBgEvent">
            <Grid x:Name="WrapperGridCanvas" Width="1240" Height="1240"  AllowDrop="True" MouseRightButtonUp="ElementDraggingEndEvent" MouseDown="ElementOnMouseEvents" MouseMove="ElementMoveEvent">
                <!-- Новый задний фон -->

                <Image 
                   x:Name="TreeBGImage"
                   Source="/data/gfx/interface/tiled_plain_bg.png"
                   IsHitTestVisible="False"
                   Stretch="UniformToFill"
                   Panel.ZIndex="0" 
                />  

                <!-- Слой с канвасом -->
                <Canvas x:Name="TechGrid"
                    Width="1240" Height="1240"
                    
                    Panel.ZIndex="1">   
                    <Canvas.Background>
                        <ImageBrush x:Name="TechBGImage"
                            Stretch="None"
                            TileMode="None"
                            AlignmentX="Left"
                            AlignmentY="Top"/>
                    </Canvas.Background>

                </Canvas>
            </Grid>

        </local:SceneViewer>
    </Grid>
</UserControl>
