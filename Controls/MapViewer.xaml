<UserControl x:Class="Controls.MapViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:controls="clr-namespace:Controls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800"
             x:Name="root">
    <Grid>
        <!-- Основной контейнер для карты -->
        <controls:SceneViewer x:Name="DisplayScrollViewer"
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto">
            <Canvas x:Name="DisplayView" 
                    Background="{StaticResource BackgroundElement}" 
                    MouseDown="Display_MouseDown" 
                    MouseMove="Display_MouseMove" 
                    MouseUp="Display_MouseUp"
                    MouseLeftButtonDown="Display_MouseLeftButtonDown"
                    MouseRightButtonDown="Display_MouseRightButtonDown">
                <!-- Слои будут добавляться динамически -->
            </Canvas>
        </controls:SceneViewer>

        <!-- Вертикальная панель кнопок слева -->
        <Border x:Name="ButtonStripBorder"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="10,10,0,0"
                Background="{StaticResource BackgroundElement}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="1"
                CornerRadius="4"
                Padding="5" Height="501" Width="40">
            <StackPanel Orientation="Vertical" x:Name="ButtonStrip">
                <!-- Кнопки слоёв будут добавляться динамически -->
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
