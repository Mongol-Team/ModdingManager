<UserControl x:Class="Controls.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:loc="clr-namespace:Controls.Utils"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="SettingsTextBlock" Grid.Row="0" Text="{loc:Localize Key=Window.Settings}"
           FontSize="20" FontWeight="Light"
           Foreground="{StaticResource TextPrimary}"
           Margin="0,24,0,24"/>

        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel>
                <Label Content="{loc:Localize Key=Label.ParallelismPercent}"
               Style="{StaticResource TextLabel}"
               Margin="0,0,0,8"/>
                <Grid Margin="0,0,0,16">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Slider x:Name="ParallelismSlider" 
                    Grid.Column="0"
                    Minimum="1" Maximum="100" 
                    TickFrequency="10" 
                    IsSnapToTickEnabled="True"
                    Margin="0,0,12,0"
                    ValueChanged="ParallelismSlider_ValueChanged"/>
                    <TextBlock x:Name="ParallelismValueText" 
                       Grid.Column="1"
                       Text="50%"
                       Foreground="{StaticResource TextPrimary}"
                       VerticalAlignment="Center"
                       MinWidth="50"
                       TextAlignment="Right"/>
                </Grid>

                <CheckBox x:Name="DebugModeCheckBox"
                  Content="{loc:Localize Key=Label.DebugMode}"
                  Style="{DynamicResource CheckBoxDark}"
                  Margin="0,0,0,16"
                  Checked="DebugModeCheckBox_Checked"
                  Unchecked="DebugModeCheckBox_Unchecked"/>

                <Label Content="{loc:Localize Key=Label.InterfaceLanguage}"
               Style="{StaticResource TextLabel}"
               Margin="0,0,0,8"/>
                <ComboBox x:Name="LanguageComboBox"
                  Style="{StaticResource ComboBoxDark}"
                  Margin="0,0,0,16"
                  SelectionChanged="LanguageComboBox_SelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}"/>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <Button x:Name="SaveSettingsButton"
                Content="{loc:Localize Key=Button.SaveSettings}"
                Style="{StaticResource ButtonDark}"
                Height="40"
                Click="SaveSettingsButton_Click"
                Margin="0,8,0,0"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
