<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="Colors.xaml"/>
        <ResourceDictionary Source="Typography.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <ControlTemplate x:Key="ButtonBaseTemplate" TargetType="Button">
        <Border x:Name="border"
                Background="{TemplateBinding Background}"
                CornerRadius="2"
                Padding="{TemplateBinding Padding}">
            <ContentPresenter HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Background" Value="{StaticResource ButtonDisabledBackground}"/>
                <Setter Property="Foreground" Value="{StaticResource ButtonDisabledText}"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <Style x:Key="ButtonBase" TargetType="Button">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="FontFamily" Value="{StaticResource FontFamilyBase}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeButtonMedium}"/>
        <Setter Property="MinHeight" Value="30"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template" Value="{StaticResource ButtonBaseTemplate}"/>
    </Style>

    <!-- Стиль для кнопки-файла в FilesStripeControl -->
    <Style x:Key="FileTabButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource BackgroundElement}"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="8,0,8,0"/>
        <!-- симетрично або 10,0,12,0 -->
        <Setter Property="MinWidth" Value="80"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Root"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="0,0,1,0">
                        <ContentPresenter Margin="{TemplateBinding Padding}"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Stretch"/>
                    </Border>
                    <!-- Тригери залишаємо, але без CloseText і PinMark -->
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource BackgroundHover}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{StaticResource ButtonDarkBackgroundPressed}"/>
                        </Trigger>
                        <DataTrigger Binding="{Binding Tag, RelativeSource={RelativeSource Self}}" Value="Selected">
                            <Setter Property="Background" Value="{StaticResource TabBarActiveBackground}"/>
                            <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
                            <Setter TargetName="Root" Property="BorderBrush" Value="{StaticResource TabBarActiveBorder}"/>
                            <Setter TargetName="Root" Property="BorderThickness" Value="0,2,1,0"/>
                        </DataTrigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- Стиль для кнопок навигации < > в FilesStripeControl -->
    <Style x:Key="FileStripeNavButton" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource BackgroundElement}"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Width" Value="20"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Root"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{StaticResource BorderColor}"
                        BorderThickness="1">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource BackgroundHover}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Background" Value="{StaticResource ButtonDarkBackgroundPressed}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="{StaticResource ButtonDisabledBackground}"/>
                            <Setter Property="Foreground" Value="{StaticResource ButtonDisabledText}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="ButtonDark" TargetType="Button" BasedOn="{StaticResource ButtonBase}">
        <Setter Property="Background" Value="{StaticResource ButtonDarkBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource ButtonDarkText}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource ButtonDarkBackgroundHover}"/>
                <Setter Property="Foreground" Value="{StaticResource ButtonDarkTextHover}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource ButtonDarkBackgroundPressed}"/>
                <Setter Property="Foreground" Value="{StaticResource ButtonDarkText}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="TitlebarButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource BackgroundHover}"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource ButtonDarkBackgroundPressed}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="ButtonDarkSmall" TargetType="Button" BasedOn="{StaticResource ButtonDark}">
        <Setter Property="Padding" Value="6,6"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeButtonSmall}"/>
        <Setter Property="MinHeight" Value="26"/>
    </Style>
    
    <Style x:Key="ButtonDarkSecondary" TargetType="Button" BasedOn="{StaticResource ButtonBase}">
        <Setter Property="Background" Value="{StaticResource ButtonDarkSecondaryBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource ButtonDarkSecondaryText}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource ButtonDarkSecondaryBackgroundHover}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource ButtonDarkSecondaryBackground}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="ButtonLight" TargetType="Button" BasedOn="{StaticResource ButtonBase}">
        <Setter Property="Background" Value="{StaticResource ButtonLightBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource ButtonLightText}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource ButtonLightBackgroundHover}"/>
                <Setter Property="Foreground" Value="{StaticResource ButtonLightTextHover}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource ButtonLightBackgroundPressed}"/>
                <Setter Property="Foreground" Value="{StaticResource ButtonLightTextHover}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="SmallIconCloseButton" TargetType="Button">
        <Setter Property="Width" Value="20"/>
        <Setter Property="Height" Value="20"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="2">
                        <Path Data="M4 4 L12 12 M12 4 L4 12"
                              Stroke="{StaticResource TextTertiary}"
                              StrokeThickness="1.5"
                              Stretch="Uniform"
                              Margin="4"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource BackgroundHover}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <Style x:Key="SmallDeleteIconButton" TargetType="Button">
        <Setter Property="Width" Value="14"/>
        <Setter Property="Height" Value="14"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="1">
                        <Path Data="M2 2 L6 6 M6 2 L2 6"
                              Stroke="{StaticResource Error}"
                              StrokeThickness="1"
                              Stretch="Uniform"
                              Margin="2"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="{StaticResource BackgroundHover}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>

