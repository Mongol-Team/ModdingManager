<UserControl x:Class="Controls.ErrorBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="300"
             MouseDoubleClick="UserControl_MouseDoubleClick">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Image with fixed size -->
        <Image x:Name="ErrorIcon" Width="26" Height="26" Margin="12"
               VerticalAlignment="Top" Stretch="Uniform" />

        <!-- TextBlock that will determine the height -->
        <TextBlock x:Name="ErrorText" Grid.Column="1" 
                   TextWrapping="Wrap" 
                   VerticalAlignment="Center"
                   Margin="4,0,7,0"
                   MinHeight="25"/>
        <!-- At least as tall as the image -->
    </Grid>
</UserControl>
