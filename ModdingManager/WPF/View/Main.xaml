<Window x:Class="ModdingManager.WPF.View.Main"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Главное меню"
        Height="720" Width="980"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <!--   Icon="app.ico" -->

    <Canvas Background="#FFF">

        <!-- Локализация по дереву фокусов -->
        <Button Content="Локализация по дерву фокусов"
                Width="235" Height="56"
                Background="Green"
                Canvas.Left="44" Canvas.Top="56"
                Command="{Binding LocConvertCommand}"/>

        <!-- Работа со картой -->
        <Button Content="Работа со картой"
                Width="237" Height="56"
                Background="Teal" Foreground="Black"
                Canvas.Left="361" Canvas.Top="56"
                Command="{Binding StateManagerCommand}"/>

        <!-- Локализация по файлу технологии -->
        <Button Content="Локализация по файлу технологии"
                Width="235" Height="56"
                Canvas.Left="44" Canvas.Top="134"
                Command="{Binding LocTechCommand}"/>

        <!-- Создатель снаряжения -->
        <Button Content="Создатель снаряжения"
                Width="237" Height="56"
                Canvas.Left="361" Canvas.Top="134"
                Command="{Binding ModCommand}"/>

        <!-- Создатель технологий -->
        <Button Content="Создатель технологий"
                Width="237" Height="56"
                Background="Teal"
                Canvas.Left="361" Canvas.Top="210"
                Command="{Binding TechCommand}"/>

        <!-- Локализация по файлу стейта -->
        <Button Content="Локализация по файлу стейта"
                Width="235" Height="56"
                Background="Green"
                Canvas.Left="44" Canvas.Top="210"
                Command="{Binding LocStateCommand}"/>

        <!-- Локализация для идей -->
        <Button Content="Локализация для идей"
                Width="235" Height="56"
                Background="Green"
                Canvas.Left="44" Canvas.Top="294"
                Command="{Binding LocIdeaCommand}"/>

        <!-- Создатель флагов -->
        <Button Content="Создатель флагов"
                Width="237" Height="56"
                Background="Olive"
                Canvas.Left="361" Canvas.Top="294"
                Command="{Binding FlagCommand}"/>

        <!-- Создатель стран -->
        <Button Content="Создатель стран"
                Width="237" Height="56"
                Background="Green"
                Canvas.Left="684" Canvas.Top="56"
                Command="{Binding CountryCommand}"/>

        <!-- Поле для директории мода -->
        <TextBox Width="554" Height="27"
                 Canvas.Left="45" Canvas.Top="590"
                 Text="{Binding ModDirectory, UpdateSourceTrigger=PropertyChanged}"/>
        <Label Content="Дирректория мода"
               Canvas.Left="639" Canvas.Top="597"/>

        <!-- Создатель персонажей -->
        <Button Content="Создатель персонажей"
                Width="237" Height="56"
                Background="Green"
                Canvas.Left="684" Canvas.Top="134"
                Command="{Binding CharCreatorCommand}"/>

        <!-- Создатель идей -->
        <Button Content="Создатель идей"
                Width="237" Height="56"
                Background="Green"
                Canvas.Left="684" Canvas.Top="210"
                Command="{Binding IdeaCreatorCommand}"/>

        <!-- Создатель шаблонов юнитов -->
        <Button Content="Создатель шаблонов юнитов"
                Width="237" Height="56"
                Canvas.Left="684" Canvas.Top="294"
                Command="{Binding TemplateCommand}"/>

        <!-- Поле для директории игры -->
        <TextBox Width="554" Height="27"
                 Canvas.Left="45" Canvas.Top="637"
                 Text="{Binding GameDirectory, UpdateSourceTrigger=PropertyChanged}"/>
        <Label Content="Дирректория игры"
               Canvas.Left="639" Canvas.Top="637"/>

        <!-- Создатель суперивентов -->
        <Button Content="Создатель суперивентов"
                Width="237" Height="56"
                Background="Teal"
                Canvas.Left="42" Canvas.Top="388"
                Command="{Binding SuperEventCommand}"/>

        <!-- Создатель стартовых юнитов -->
        <Button Content="Создатель стартовых юнитов"
                Width="237" Height="56"
                Background="Teal"
                Canvas.Left="684" Canvas.Top="388"
                Command="{Binding OOBCreatorCommand}"/>

        <!-- Debug -->
        <Button Content="Debug"
                Width="131" Height="37"
                Background="Gray" Foreground="White"
                Canvas.Left="806" Canvas.Top="607"
                Command="{Binding DebugCommand}"/>

        <!-- Создатель идеологий -->
        <Button Content="Создатель идеологий"
                Width="237" Height="56"
                Canvas.Left="361" Canvas.Top="388"
                Command="{Binding IdeologyCommand}"/>
    </Canvas>
</Window>
