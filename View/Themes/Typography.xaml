<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

    <FontFamily x:Key="FontFamilyBase">Roboto, Segoe UI</FontFamily>
    <FontFamily x:Key="FontFamilyAccent">Philosopher, Georgia</FontFamily>
    
    <sys:Double x:Key="FontSizeLargeTitle">32</sys:Double>
    <sys:Double x:Key="FontSizePageTitle">24</sys:Double>
    <sys:Double x:Key="FontSizeSectionTitle">20</sys:Double>
    <sys:Double x:Key="FontSizeModalTitle">20</sys:Double>
    <sys:Double x:Key="FontSizeSubtitle">16</sys:Double>
    <sys:Double x:Key="FontSizeBody">14</sys:Double>
    <sys:Double x:Key="FontSizeBodyMedium">16</sys:Double>
    <sys:Double x:Key="FontSizeSmall">12</sys:Double>
    <sys:Double x:Key="FontSizeButtonSmall">14</sys:Double>
    <sys:Double x:Key="FontSizeButtonMedium">16</sys:Double>
    <sys:Double x:Key="FontSizeCardTitle">14</sys:Double>
    <sys:Double x:Key="FontSizeCardSubtitle">12</sys:Double>
    
    <Style x:Key="TextLargeTitle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontFamilyAccent}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeLargeTitle}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
    </Style>
    
    <Style x:Key="TextPageTitle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontFamilyAccent}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizePageTitle}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
    </Style>
    
    <Style x:Key="TextSectionTitle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontFamilyAccent}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeSectionTitle}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
    </Style>
    
    <Style x:Key="TextModalTitle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontFamilyBase}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeModalTitle}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextSecondary}"/>
    </Style>
    
    <Style x:Key="TextSubtitle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontFamilyAccent}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeSubtitle}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource TextTertiary}"/>
    </Style>
    
    <Style x:Key="TextBody" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontFamilyBase}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="LineHeight" Value="1.6"/>
    </Style>
    
    <Style x:Key="TextBodyMedium" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontFamilyBase}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeBodyMedium}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
    </Style>
    
    <Style x:Key="TextSmall" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontFamilyBase}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeSmall}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource TextLowContrast}"/>
    </Style>
    
    <Style x:Key="TextCardTitle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontFamilyBase}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeCardTitle}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
    </Style>
    
    <Style x:Key="TextCardSubtitle" TargetType="TextBlock">
        <Setter Property="FontFamily" Value="{StaticResource FontFamilyBase}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeCardSubtitle}"/>
        <Setter Property="FontWeight" Value="Normal"/>
        <Setter Property="Foreground" Value="{StaticResource TextTertiary}"/>
    </Style>
    
    <Style x:Key="TextLabel" TargetType="Label">
        <Setter Property="FontFamily" Value="{StaticResource FontFamilyBase}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeBody}"/>
        <Setter Property="Foreground" Value="{StaticResource TextLowContrast}"/>
    </Style>

</ResourceDictionary>
