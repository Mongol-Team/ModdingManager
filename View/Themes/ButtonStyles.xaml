<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="ButtonDark" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource ButtonDarkBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource ButtonDarkText}"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="FontFamily" Value="{StaticResource FontFamilyBase}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeButtonMedium}"/>
        <Setter Property="MinHeight" Value="30"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            CornerRadius="2"
                            Padding="{TemplateBinding Padding}">
                        <ContentPresenter HorizontalAlignment="Center"
                                        VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource ButtonDarkBackgroundHover}"/>
                            <Setter Property="Foreground" Value="{StaticResource ButtonDarkTextHover}"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{StaticResource ButtonDarkBackgroundPressed}"/>
                            <Setter Property="Foreground" Value="{StaticResource ButtonDarkText}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Background" Value="{StaticResource ButtonDisabledBackground}"/>
                            <Setter Property="Foreground" Value="{StaticResource ButtonDisabledText}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    
    <Style x:Key="ButtonDarkSmall" TargetType="Button" BasedOn="{StaticResource ButtonDark}">
        <Setter Property="Padding" Value="6,6"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeButtonSmall}"/>
        <Setter Property="MinHeight" Value="26"/>
    </Style>
    
