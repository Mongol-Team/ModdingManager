<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Базовый шаблон для всех кнопок -->
    <ControlTemplate x:Key="ButtonBaseTemplate" TargetType="Button">
        <Border x:Name="border"
                Background="{TemplateBinding Background}"
                CornerRadius="2"
                Padding="{TemplateBinding Padding}">
            <ContentPresenter HorizontalAlignment="Center"
                            VerticalAlignment="Center"/>
        </Border>
        <ControlTemplate.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Background" Value="{StaticResource ButtonDisabledBackground}"/>
                <Setter Property="Foreground" Value="{StaticResource ButtonDisabledText}"/>
            </Trigger>
        </ControlTemplate.Triggers>
    </ControlTemplate>

    <!-- Базовый стиль для кнопок -->
    <Style x:Key="ButtonBase" TargetType="Button">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Padding" Value="10,8"/>
        <Setter Property="FontFamily" Value="{StaticResource FontFamilyBase}"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeButtonMedium}"/>
        <Setter Property="MinHeight" Value="30"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template" Value="{StaticResource ButtonBaseTemplate}"/>
    </Style>

    <Style x:Key="ButtonDark" TargetType="Button" BasedOn="{StaticResource ButtonBase}">
        <Setter Property="Background" Value="{StaticResource ButtonDarkBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource ButtonDarkText}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource ButtonDarkBackgroundHover}"/>
                <Setter Property="Foreground" Value="{StaticResource ButtonDarkTextHover}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource ButtonDarkBackgroundPressed}"/>
                <Setter Property="Foreground" Value="{StaticResource ButtonDarkText}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="TitlebarButtonStyle" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource TextPrimary}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource BackgroundHover}"/>
                <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource ButtonDarkBackgroundPressed}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="ButtonDarkSmall" TargetType="Button" BasedOn="{StaticResource ButtonDark}">
        <Setter Property="Padding" Value="6,6"/>
        <Setter Property="FontSize" Value="{StaticResource FontSizeButtonSmall}"/>
        <Setter Property="MinHeight" Value="26"/>
    </Style>
    
    <Style x:Key="ButtonDarkSecondary" TargetType="Button" BasedOn="{StaticResource ButtonBase}">
        <Setter Property="Background" Value="{StaticResource ButtonDarkSecondaryBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource ButtonDarkSecondaryText}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource ButtonDarkSecondaryBackgroundHover}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource ButtonDarkSecondaryBackground}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    
    <Style x:Key="ButtonLight" TargetType="Button" BasedOn="{StaticResource ButtonBase}">
        <Setter Property="Background" Value="{StaticResource ButtonLightBackground}"/>
        <Setter Property="Foreground" Value="{StaticResource ButtonLightText}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="{StaticResource ButtonLightBackgroundHover}"/>
                <Setter Property="Foreground" Value="{StaticResource ButtonLightTextHover}"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="{StaticResource ButtonLightBackgroundPressed}"/>
                <Setter Property="Foreground" Value="{StaticResource ButtonLightTextHover}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

</ResourceDictionary>

