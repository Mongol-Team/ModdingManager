<base:BaseWindow x:Class="View.WelcomeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:Controls;assembly=Controls"
        xmlns:enums="clr-namespace:Models.Enums;assembly=Models"
        xmlns:base="clr-namespace:View"
        xmlns:loc="clr-namespace:Controls.Utils;assembly=Controls"
        Width="1200" Height="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Style="{StaticResource WindowDark}"
        Closing="WelcomeWindow_Closing">
    <base:BaseWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                
                <ResourceDictionary Source="/Controls;component/Themes/Colors.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </base:BaseWindow.Resources>
    <Grid Background="{StaticResource BackgroundApp}">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        
        <controls:WindowTitleBar Grid.Row="0"/>
        
        <Grid Grid.Row="1" Margin="40,40,40,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock x:Name="GameDirectoryTextBlock"
                       Grid.Column="0"
                       VerticalAlignment="Bottom"
                       HorizontalAlignment="Left"
                       FontSize="11"
                       Foreground="{StaticResource TextTertiary}"
                       Opacity="0.6"
                       Margin="0,0,0,8"/>
            
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock x:Name="GetStartedTextBlock" Grid.Row="0" Text="{loc:LocalizeExtension Key=Window.GetStarted}" 
                           FontSize="28" FontWeight="Light"
                           Foreground="{StaticResource TextPrimary}"
                           Margin="0,0,0,20"/>
                
                <TextBox x:Name="SearchTextBox" Grid.Row="1"
                         Style="{StaticResource TextBoxDark}"
                         Margin="0,0,0,16"
                         TextChanged="SearchTextBox_TextChanged"
                         FontSize="14"
                         Padding="12,8"/>
                
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="ProjectsItemsControl" Height="491">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Expander IsExpanded="True" Margin="0,0,0,16">
                                    <Expander.Header>
                                        <TextBlock Text="{Binding Key}" 
                                                   FontSize="14" FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextPrimary}"
                                                   Margin="0,8"/>
                                    </Expander.Header>
                                    <ItemsControl ItemsSource="{Binding Value}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Style="{StaticResource ListItemHoverBorder}"
                                                        Margin="0,2"
                                                        Padding="8,6"
                                                        Cursor="Hand">
                                                    <Border.InputBindings>
                                                        <MouseBinding MouseAction="LeftClick"
                                                                      Command="{Binding OpenProjectCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                      CommandParameter="{Binding}"/>
                                                    </Border.InputBindings>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <Path Grid.Column="0" 
                                                              Data="M12,2L2,7L2,17L12,22L22,17L22,7L12,2Z" 
                                                              Fill="#9B59B6" 
                                                              Width="16" Height="16"
                                                              Margin="0,0,12,0"
                                                              VerticalAlignment="Center"/>
                                                        
                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock Text="{Binding Name}" 
                                                                       FontSize="14"
                                                                       Foreground="{StaticResource TextPrimary}"/>
                                                            <TextBlock Text="{Binding Path}" 
                                                                       FontSize="12"
                                                                       Foreground="{StaticResource TextTertiary}"
                                                                       Margin="0,2,0,0"/>
                                                        </StackPanel>
                                                        
                                                        <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="12,0,0,0">
                                                            <TextBlock Text="{Binding LastOpened}" 
                                                                       FontSize="11"
                                                                       Foreground="{StaticResource TextTertiary}"
                                                                       HorizontalAlignment="Right"/>
                                                            <Button Style="{StaticResource SmallDeleteIconButton}"
                                                                    Margin="0,2,0,0"
                                                                    HorizontalAlignment="Right"
                                                                    ToolTip="{loc:LocalizeExtension Key=Menu.Delete}"
                                                                    Command="{Binding RemoveProjectCommand, RelativeSource={RelativeSource AncestorType=Window}}"
                                                                    CommandParameter="{Binding}"/>
                                                        </StackPanel>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Expander>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>

            <Grid Grid.Column="2">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <TextBlock x:Name="ActionsTextBlock"
                       Grid.Row="0"
                       Text="{loc:LocalizeExtension Key=Window.Actions}" 
                       FontSize="20" FontWeight="Light"
                       Foreground="{StaticResource TextPrimary}"
                       Margin="0,0,0,24"/>

                        <StackPanel Grid.Row="1">
                            <Button x:Name="CreateProjectButton" 
                        Style="{StaticResource ButtonDark}"
                        Height="60"
                        FontSize="14"
                        Click="CreateProjectButton_Click"
                        HorizontalContentAlignment="Left"
                        Padding="16,0"
                        Margin="0,0,0,12">
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="24" Height="24" 
                                 Fill="#4CAF50" 
                                 Margin="0,0,12,0"/>
                                    <TextBlock x:Name="CreateProjectTextBlock"
                                   Text="{loc:LocalizeExtension Key=Button.CreateNewProject}" 
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource ButtonDarkText}"/>
                                </StackPanel>
                            </Button>

                            <Button x:Name="OpenProjectButton" 
                        Style="{StaticResource ButtonDark}"
                        Height="60"
                        FontSize="14"
                        Click="OpenProjectButton_Click"
                        HorizontalContentAlignment="Left"
                        Padding="16,0"
                        Margin="0,0,0,12">
                                <StackPanel Orientation="Horizontal">
                                    <Path Data="M10,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V8C22,6.89 21.1,6 20,6H12L10,4Z" 
                              Fill="#2196F3" 
                              Width="24" Height="24"
                              Margin="0,0,12,0"
                              Stretch="Uniform"/>
                                    <TextBlock x:Name="OpenProjectTextBlock"
                                   Text="{loc:LocalizeExtension Key=Button.OpenProject}" 
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource ButtonDarkText}"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>

                        <controls:SettingsControl x:Name="WelcomeSettingsControl"
                                      Grid.Row="2"
                                      SaveClicked="WelcomeSettingsControl_SaveClicked"/>
                    </Grid>
                </ScrollViewer>
            </Grid>


        </Grid>
        
        <Grid Grid.Row="2" Background="{StaticResource BackgroundSidebar}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <controls:ProgressBar x:Name="LoadingProgressBar" Grid.Column="0" 
                         Height="20" Margin="8,5,8,5"
                         Minimum="0" Maximum="100" Value="0"
                         Visibility="Collapsed"
                         ProgressBrush="{StaticResource Link}"/>
            <TextBlock x:Name="LoadingStatusText" Grid.Column="1" 
                       Text="" Margin="8,5,8,5"
                       Foreground="{StaticResource TextTertiary}"
                       FontSize="11"
                       VerticalAlignment="Center"
                       Visibility="Collapsed"/>
        </Grid>
    </Grid>
</base:BaseWindow>
