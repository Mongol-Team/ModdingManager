<Window x:Class="View.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:ViewControls"
        Title="Недавние проекты"
        Width="600" Height="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Style="{StaticResource WindowDark}">
    <Grid Background="{StaticResource BackgroundApp}">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <controls:WindowTitleBar Grid.Row="0"/>
        
        <Grid Grid.Row="1" Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="Недавние проекты" 
                       Style="{StaticResource TextPageTitle}" 
                       Margin="0,0,0,16"/>

            <ListBox x:Name="ProjectsListBox" 
                     Grid.Row="1"
                     Background="{StaticResource BackgroundCard}"
                     Foreground="{StaticResource TextPrimary}"
                     BorderBrush="{StaticResource BorderColor}"
                     SelectionChanged="ProjectsListBox_SelectionChanged"
                     MouseDoubleClick="ProjectsListBox_MouseDoubleClick">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" 
                                   Foreground="{StaticResource TextPrimary}"
                                   Margin="8,4"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <StackPanel Grid.Row="2" Orientation="Horizontal" 
                        HorizontalAlignment="Right" Margin="0,16,0,0">
                <Button x:Name="OpenProjectButton" Content="Открыть проект" Width="140" 
                        Style="{StaticResource ButtonDark}" Margin="0,0,12,0"
                        Click="OpenProjectButton_Click"/>
                <Button x:Name="RemoveButton" Content="Удалить" Width="100" 
                        Style="{StaticResource ButtonDarkSecondary}" Margin="0,0,12,0"
                        Click="RemoveButton_Click"/>
                <Button x:Name="CloseButton" Content="Закрыть" Width="100" 
                        Style="{StaticResource ButtonDark}"
                        Click="CloseButton_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>

