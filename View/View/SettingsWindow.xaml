<Window x:Class="View.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:ViewControls"
        xmlns:loc="clr-namespace:View.Utils"
        Title="{loc:Localize Key=Window.ModdingManager}"
        Width="1200" Height="700"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Style="{StaticResource WindowDark}">
    <Grid Background="{StaticResource BackgroundApp}">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <controls:WindowTitleBar Grid.Row="0"/>
        
        <Grid Grid.Row="1" Margin="40">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="20"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock x:Name="GetStartedTextBlock" Grid.Row="0" Text="{loc:Localize Key=Window.GetStarted}" 
                           FontSize="28" FontWeight="Light"
                           Foreground="{StaticResource TextPrimary}"
                           Margin="0,0,0,20"/>
                
                <TextBox x:Name="SearchTextBox" Grid.Row="1"
                         Style="{StaticResource TextBoxDark}"
                         Margin="0,0,0,16"
                         TextChanged="SearchTextBox_TextChanged"
                         FontSize="14"
                         Padding="12,8"/>
                
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="ProjectsItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Expander IsExpanded="True" Margin="0,0,0,16">
                                    <Expander.Header>
                                        <TextBlock Text="{Binding Key}" 
                                                   FontSize="14" FontWeight="SemiBold"
                                                   Foreground="{StaticResource TextPrimary}"
                                                   Margin="0,8"/>
                                    </Expander.Header>
                                    <ItemsControl ItemsSource="{Binding Value}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <Border Background="Transparent" 
                                                        Margin="0,2"
                                                        Padding="8,6"
                                                        Cursor="Hand"
                                                        MouseLeftButtonDown="ProjectItem_MouseLeftButtonDown">
                                                    <Border.Style>
                                                        <Style TargetType="Border">
                                                            <Setter Property="Background" Value="Transparent"/>
                                                            <Style.Triggers>
                                                                <Trigger Property="IsMouseOver" Value="True">
                                                                    <Setter Property="Background" Value="{StaticResource BackgroundHover}"/>
                                                                </Trigger>
                                                            </Style.Triggers>
                                                        </Style>
                                                    </Border.Style>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="Auto"/>
                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="Auto"/>
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <Path Grid.Column="0" 
                                                              Data="M12,2L2,7L2,17L12,22L22,17L22,7L12,2Z" 
                                                              Fill="#9B59B6" 
                                                              Width="16" Height="16"
                                                              Margin="0,0,12,0"
                                                              VerticalAlignment="Center"/>
                                                        
                                                        <StackPanel Grid.Column="1">
                                                            <TextBlock Text="{Binding Name}" 
                                                                       FontSize="14"
                                                                       Foreground="{StaticResource TextPrimary}"/>
                                                            <TextBlock Text="{Binding Path}" 
                                                                       FontSize="12"
                                                                       Foreground="{StaticResource TextTertiary}"
                                                                       Margin="0,2,0,0"/>
                                                        </StackPanel>
                                                        
                                                        <TextBlock Grid.Column="2" 
                                                                   Text="{Binding LastOpened}" 
                                                                   FontSize="11"
                                                                   Foreground="{StaticResource TextTertiary}"
                                                                   VerticalAlignment="Center"
                                                                   Margin="12,0,0,0"/>
                                                    </Grid>
                                                </Border>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </Expander>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
            
            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock x:Name="ActionsTextBlock" Grid.Row="0" Text="{loc:Localize Key=Window.Actions}" 
                           FontSize="20" FontWeight="Light"
                           Foreground="{StaticResource TextPrimary}"
                           Margin="0,0,0,24"/>
                
                <StackPanel Grid.Row="1">
                    <Button x:Name="CreateProjectButton" 
                            Style="{StaticResource ButtonDark}"
                            Height="60"
                            FontSize="14"
                            Click="CreateProjectButton_Click"
                            HorizontalContentAlignment="Left"
                            Padding="16,0"
                            Margin="0,0,0,12">
                        <StackPanel Orientation="Horizontal">
                            <Ellipse Width="24" Height="24" 
                                     Fill="#4CAF50" 
                                     Margin="0,0,12,0"/>
                            <TextBlock x:Name="CreateProjectTextBlock" Text="{loc:Localize Key=Button.CreateNewProject}" 
                                       VerticalAlignment="Center"
                                       Foreground="{StaticResource ButtonDarkText}"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="OpenProjectButton" 
                            Style="{StaticResource ButtonDark}"
                            Height="60"
                            FontSize="14"
                            Click="OpenProjectButton_Click"
                            HorizontalContentAlignment="Left"
                            Padding="16,0"
                            Margin="0,0,0,12">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M10,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V8C22,6.89 21.1,6 20,6H12L10,4Z" 
                                  Fill="#2196F3" 
                                  Width="24" Height="24"
                                  Margin="0,0,12,0"
                                  Stretch="Uniform"/>
                            <TextBlock x:Name="OpenProjectTextBlock" Text="{loc:Localize Key=Button.OpenProject}" 
                                       VerticalAlignment="Center"
                                       Foreground="{StaticResource ButtonDarkText}"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="OpenFolderButton" 
                            Style="{StaticResource ButtonDark}"
                            Height="60"
                            FontSize="14"
                            Click="OpenFolderButton_Click"
                            HorizontalContentAlignment="Left"
                            Padding="16,0"
                            Margin="0,0,0,12">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M10,4H4C2.89,4 2,4.89 2,6V18A2,2 0 0,0 4,20H20A2,2 0 0,0 22,18V8C22,6.89 21.1,6 20,6H12L10,4Z" 
                                  Fill="#2196F3" 
                                  Width="24" Height="24"
                                  Margin="0,0,12,0"
                                  Stretch="Uniform"/>
                            <TextBlock x:Name="OpenFolderTextBlock" Text="{loc:Localize Key=Button.OpenFolder}" 
                                       VerticalAlignment="Center"
                                       Foreground="{StaticResource ButtonDarkText}"/>
                        </StackPanel>
                    </Button>
                    
                    <Button x:Name="CloneRepositoryButton" 
                            Style="{StaticResource ButtonDark}"
                            Height="60"
                            FontSize="14"
                            Click="CloneRepositoryButton_Click"
                            HorizontalContentAlignment="Left"
                            Padding="16,0">
                        <StackPanel Orientation="Horizontal">
                            <Path Data="M12,2A10,10 0 0,0 2,12C2,16.42 4.87,20.17 8.84,21.5C9.34,21.58 9.5,21.27 9.5,21C9.5,20.77 9.5,20.14 9.5,19.31C6.73,19.91 6.14,17.97 6.14,17.97C5.68,16.81 5.03,16.5 5.03,16.5C4.12,15.88 5.1,15.9 5.1,15.9C6.1,15.97 6.63,16.93 6.63,16.93C7.5,18.45 8.97,18 9.54,17.76C9.63,17.11 9.89,16.67 10.17,16.42C7.95,16.17 5.62,15.31 5.62,11.5C5.62,10.39 6,9.5 6.65,8.79C6.55,8.54 6.2,7.5 6.75,6.15C6.75,6.15 7.59,5.88 9.5,7.17C10.29,6.95 11.15,6.84 12,6.84C12.85,6.84 13.71,6.95 14.5,7.17C16.41,5.88 17.25,6.15 17.25,6.15C17.8,7.5 17.45,8.54 17.35,8.79C18,9.5 18.38,10.39 18.38,11.5C18.38,15.32 16.04,16.16 13.81,16.41C14.17,16.72 14.5,17.33 14.5,18.26C14.5,19.6 14.5,20.68 14.5,21C14.5,21.27 14.66,21.59 15.16,21.5C19.14,20.16 22,16.42 22,12A10,10 0 0,0 12,2Z" 
                                  Fill="#9C27B0" 
                                  Width="24" Height="24"
                                  Margin="0,0,12,0"
                                  Stretch="Uniform"/>
                            <TextBlock x:Name="CloneRepositoryTextBlock" Text="{loc:Localize Key=Button.CloneRepository}" 
                                       VerticalAlignment="Center"
                                       Foreground="{StaticResource ButtonDarkText}"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Grid>
        </Grid>
    </Grid>
</Window>
