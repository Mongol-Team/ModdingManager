<Window x:Class="View.MapHealerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        xmlns:controls="clr-namespace:ViewControls"
        mc:Ignorable="d"
        Title="MapHealerWindow" Height="450" Width="800"
        ResizeMode="CanResize"
        Style="{StaticResource WindowDark}">
    <Grid Background="{StaticResource BackgroundApp}">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <controls:WindowTitleBar Grid.Row="0"/>
        
        <Grid Grid.Row="1">
        <Button Name ="DelNoExistingProvButton"  HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Height="66" Width="170" Click="DelNoExistingProvButton_Click">
            <TextBlock TextWrapping="Wrap" TextAlignment="Center">
                <Run Text=" Удалить упопинания не "/>
                <LineBreak/>
                <Run Text="существующих провинций "/>
            </TextBlock>
        </Button>
        <Button Name ="CheckProvDefines"  HorizontalAlignment="Left" Margin="10,81,0,0" VerticalAlignment="Top" Height="66" Width="170" Click="CheckProvDefines_Click">
            <TextBlock TextWrapping="Wrap" TextAlignment="Center">
                <Run Text="Проверить провинции"/>
                <LineBreak/>
                <Run Text="на целостность"/>
            </TextBlock>
        </Button>
        <Button Name ="CheckStateDefinesButton"  HorizontalAlignment="Left" Margin="10,152,0,0" VerticalAlignment="Top" Height="66" Width="170" Click="CheckStateDefines_Click">
            <TextBlock TextWrapping="Wrap" TextAlignment="Center">
                <Run Text="Проверить стейты"/>
                <LineBreak/>
                <Run Text="на целостность"/>
            </TextBlock>
        </Button>
        <Button Name ="CheckRegionDefines"  HorizontalAlignment="Left" Margin="10,223,0,0" VerticalAlignment="Top" Height="66" Width="170" Click="CheckRegionDefinesButton_Click">
            <TextBlock TextWrapping="Wrap" TextAlignment="Center">
                <Run Text="Проверить регионы"/>
                <LineBreak/>
                <Run Text="на целостность"/>
            </TextBlock>
        </Button>
        <Button x:Name ="FFFF"  HorizontalAlignment="Left" Margin="10,294,0,0" VerticalAlignment="Top" Height="66" Width="170" Click="CheckRegionDefinesButton_Click">
            <TextBlock TextWrapping="Wrap" TextAlignment="Center"><Run Text="Проверить регионы"/><LineBreak/><Run Text="на целостность"/></TextBlock>
        </Button>
        </Grid>
    </Grid>
</Window>
