<Window x:Class="ViewControls.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:ViewControls"
        mc:Ignorable="d" 
        d:DesignHeight="110" d:DesignWidth="200"
        WindowStyle="ToolWindow" ResizeMode="NoResize" 
        WindowStartupLocation="CenterOwner" SizeToContent="WidthAndHeight"
        Title="Загрузка..." ShowInTaskbar="False" Topmost="True"
        Style="{StaticResource WindowDark}">
    <StackPanel Margin="20" Background="{StaticResource BackgroundApp}">
        <TextBlock x:Name="ProgressMessageBox" Text="" FontSize="16" HorizontalAlignment="Center" Margin="0,0,0,10" Foreground="{StaticResource TextPrimary}"/>
        <ProgressBar x:Name="LoadingProgressBar" Width="200" Height="20" Minimum="0" Maximum="4"/>
    </StackPanel>
</Window>
