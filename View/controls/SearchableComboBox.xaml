<UserControl 
    x:Class="ViewControls.SearchableComboBox"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    xmlns:local="clr-namespace:ViewControls"
    x:Name="root"
    Background="Transparent">

    <UserControl.Resources>
        <!-- Конвертер -->
        <local:ObjectToStringConverter x:Key="ObjectToStringConverter"/>

        <!-- Стиль для кнопки -->
        <Style x:Key="SearchButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center"
                                            VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3A3A3A"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#4A4A4A"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Стиль для корректного скролла в ListBox -->
        <Style x:Key="ListBoxScrollStyle" TargetType="ListBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <Border BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}">
                            <ScrollViewer x:Name="PART_ScrollViewer"
                                          Padding="{TemplateBinding Padding}"
                                          HorizontalScrollBarVisibility="Disabled"
                                          VerticalScrollBarVisibility="Auto"
                                          CanContentScroll="True">
                                <ItemsPresenter />
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- Скрытый реальный ComboBox для биндинга -->
        <ComboBox x:Name="PART_ComboBox"
                  Visibility="Collapsed"
                  ItemsSource="{Binding ItemsSource, ElementName=root}"
                  SelectedItem="{Binding SelectedItem, ElementName=root, Mode=TwoWay}"
                  SelectionChanged="OnComboBoxSelectionChanged"/>

        <!-- Кастомная оболочка -->
        <Border x:Name="PART_ComboBoxContainer"
                Background="#2A2A2A"
                BorderBrush="#404040"
                BorderThickness="1"
                CornerRadius="2"
                Padding="8,6"
                Cursor="Hand">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Отображаемый текст -->
                <TextBlock x:Name="PART_DisplayText"
                           Grid.Column="0"
                           Text="{Binding SelectedItem, ElementName=root, Converter={StaticResource ObjectToStringConverter}}"
                           VerticalAlignment="Center"
                           Foreground="#FFFFFF"
                           TextTrimming="CharacterEllipsis"/>

                <!-- Иконка стрелки вниз/поиска -->
                <Button x:Name="PART_DropDownButton"
                        Grid.Column="1"
                        Width="20"
                        Height="20"
                        Style="{StaticResource SearchButtonStyle}"
                        VerticalAlignment="Center"
                        Margin="4,0,0,0"
                        Click="OnDropDownButtonClick">
                    <Grid>
                        <!-- Стрелка вниз -->
                        <Path x:Name="PART_ArrowIcon"
                              Data="M0,0 L4,4 8,0"
                              Stroke="#CCCCCC"
                              StrokeThickness="1.5"
                              HorizontalAlignment="Center"
                              VerticalAlignment="Center">
                            <Path.RenderTransform>
                                <RotateTransform CenterX="4" CenterY="4" Angle="0"/>
                            </Path.RenderTransform>
                        </Path>
                    </Grid>
                </Button>
            </Grid>
        </Border>

        <!-- Попап с поиском -->
        <Popup x:Name="PART_Popup"
               PlacementTarget="{Binding ElementName=PART_ComboBoxContainer}"
               Placement="Bottom"
               StaysOpen="False"
               AllowsTransparency="True"
               PopupAnimation="Slide">
            <Border Background="#2A2A2A" 
                    BorderBrush="#404040" 
                    BorderThickness="1" 
                    CornerRadius="4"
                    Padding="0"
                    Width="{Binding ComboWidth, ElementName=root}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <!-- Панель поиска -->
                    <Border Grid.Row="0"
                            Background="#1A1A1A"
                            BorderBrush="#404040"
                            BorderThickness="0,0,0,1"
                            CornerRadius="4,4,0,0"
                            Padding="8">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <!-- Иконка поиска -->
                            <Path Grid.Column="0"
                                  Data="M7.5,1C3.9,1,1,3.9,1,7.5S3.9,14,7.5,14S14,11.1,14,7.5S11.1,1,7.5,1z M7.5,2.3c2.8,0,5.2,2.3,5.2,5.2s-2.3,5.2-5.2,5.2S2.3,10.3,2.3,7.5S4.7,2.3,7.5,2.3z M11.5,11.5l3,3"
                                  Width="16"
                                  Height="16"
                                  VerticalAlignment="Center"
                                  Stretch="Uniform"
                                  Stroke="#CCCCCC"
                                  StrokeThickness="1.5"
                                  Fill="Transparent"
                                  Margin="0,0,8,0"/>

                            <!-- Поле поиска -->
                            <TextBox x:Name="PART_SearchBox"
                                     Grid.Column="1"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     Foreground="#FFFFFF"
                                     VerticalContentAlignment="Center"
                                     TextChanged="OnSearchTextChanged"
                                     KeyDown="OnSearchBoxKeyDown">
                                <TextBox.Style>
                                    <Style TargetType="TextBox">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="TextBox">
                                                    <ScrollViewer x:Name="PART_ContentHost"
                                                                  VerticalAlignment="Center"/>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                </TextBox.Style>
                            </TextBox>

                            <!-- Кнопка очистки -->
                            <Button x:Name="PART_ClearButton"
                                    Grid.Column="2"
                                    Width="16"
                                    Height="16"
                                    Style="{StaticResource SearchButtonStyle}"
                                    VerticalAlignment="Center"
                                    Visibility="Collapsed"
                                    Margin="4,0,0,0"
                                    Click="OnClearSearchClick">
                                <Path Data="M4,4 L12,12 M12,4 L4,12"
                                      Stroke="#CCCCCC"
                                      StrokeThickness="2"/>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- Список результатов -->
                    <ListBox x:Name="PART_ListBox"
                             Grid.Row="1"
                             Background="#2A2A2A"
                             Foreground="#FFFFFF"
                             BorderThickness="0"
                             MaxHeight="300"
                             Style="{StaticResource ListBoxScrollStyle}"
                             MouseDoubleClick="OnListBoxDoubleClick"
                             SelectionChanged="OnListBoxSelectionChanged">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Converter={StaticResource ObjectToStringConverter}}"
                                           TextTrimming="CharacterEllipsis"
                                           Margin="8,4"
                                           ToolTip="{Binding Converter={StaticResource ObjectToStringConverter}}"/>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="BorderThickness" Value="0"/>
                                <Setter Property="Foreground" Value="#FFFFFF"/>
                                <Setter Property="Padding" Value="8,4"/>
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <Border x:Name="Bd"
                                                    Background="{TemplateBinding Background}"
                                                    BorderBrush="{TemplateBinding BorderBrush}"
                                                    BorderThickness="{TemplateBinding BorderThickness}"
                                                    Padding="{TemplateBinding Padding}">
                                                <ContentPresenter/>
                                            </Border>
                                            <ControlTemplate.Triggers>
                                                <Trigger Property="IsMouseOver" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="#3A3A3A"/>
                                                </Trigger>
                                                <Trigger Property="IsSelected" Value="True">
                                                    <Setter TargetName="Bd" Property="Background" Value="#3A3A3A"/>
                                                </Trigger>
                                            </ControlTemplate.Triggers>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </Grid>
            </Border>
        </Popup>
    </Grid>
</UserControl>