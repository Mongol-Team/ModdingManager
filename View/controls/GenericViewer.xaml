<UserControl x:Class="ViewControls.GenericViewer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:controls="clr-namespace:ViewControls"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="800">
    <Grid Background="{StaticResource BackgroundApp}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" MinWidth="300"/>
            <ColumnDefinition Width="5"/>
            <ColumnDefinition Width="*" MinWidth="300"/>
        </Grid.ColumnDefinitions>
        
        <Border Grid.Column="0"
                Background="{StaticResource BackgroundCard}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Margin="20">
                <controls:ClassViewer x:Name="ConfigViewer" 
                                      ElementOrientation="Left"
                                      FontSize="14"
                                      ElementMargin="5"/>
            </ScrollViewer>
        </Border>
        
        <GridSplitter Grid.Column="1"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch"
                      Background="{StaticResource BorderColor}"
                      Width="5"
                      ResizeDirection="Columns"
                      ResizeBehavior="PreviousAndNext"
                      ShowsPreview="False"/>
        
        <Border Grid.Column="2"
                Background="{StaticResource BackgroundCard}"
                BorderBrush="{StaticResource BorderColor}"
                BorderThickness="1,0,0,0">
            <Grid>
                <TextBlock Text="Файл будет отображаться здесь"
                           Foreground="{StaticResource TextTertiary}"
                           FontSize="14"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>

