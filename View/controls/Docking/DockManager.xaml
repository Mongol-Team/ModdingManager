<UserControl x:Class="ViewControls.Docking.DockManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:docking="clr-namespace:ViewControls.Docking"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="{StaticResource BackgroundApp}" x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        
        <docking:DockZone x:Name="LeftZone" 
                         DockSide="Left"/>
        
        <docking:DockZone x:Name="RightZone" 
                         DockSide="Right"/>
        
        <docking:DockZone x:Name="TopZone" 
                         DockSide="Top"/>
        
        <docking:DockZone x:Name="BottomZone" 
                         DockSide="Bottom"/>
        
        <Frame x:Name="CenterFrame" 
               NavigationUIVisibility="Hidden"
               Background="{StaticResource BackgroundApp}"/>
        
        <GridSplitter x:Name="LeftSplitter"
                      HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch"
                      Background="{StaticResource BorderColor}"
                      Width="5"
                      ResizeDirection="Columns"
                      ResizeBehavior="PreviousAndNext"
                      ShowsPreview="False"/>
        
        <GridSplitter x:Name="RightSplitter"
                      HorizontalAlignment="Stretch" 
                      VerticalAlignment="Stretch"
                      Background="{StaticResource BorderColor}"
                      Width="5"
                      ResizeDirection="Columns"
                      ResizeBehavior="PreviousAndNext"
                      ShowsPreview="False"/>
        
        <GridSplitter x:Name="TopSplitter"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch" 
                      Background="{StaticResource BorderColor}"
                      Height="5"
                      ResizeDirection="Rows"
                      ResizeBehavior="PreviousAndNext"
                      ShowsPreview="False"/>
        
        <GridSplitter x:Name="BottomSplitter"
                      HorizontalAlignment="Stretch"
                      VerticalAlignment="Stretch" 
                      Background="{StaticResource BorderColor}"
                      Height="5"
                      ResizeDirection="Rows"
                      ResizeBehavior="PreviousAndNext"
                      ShowsPreview="False"/>
    </Grid>
</UserControl>

