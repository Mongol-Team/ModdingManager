<UserControl x:Class="ViewControls.ColorPickerDropdown"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ViewControls"
             Width="100" Height="25">
    <Grid>
        <!-- Маленький прямоугольник с цветом -->
        <Border x:Name="ColorPreview"
                Background="White"
                BorderBrush="Black"
                BorderThickness="1"
                CornerRadius="3"/>

        <!-- Popup со встроенным ColorPicker -->
        <Popup x:Name="ColorPopup"
           Placement="Bottom"
           StaysOpen="True"
           AllowsTransparency="True"
           Closed="ColorPopup_Closed"
           PlacementTarget="{Binding ElementName=ColorPreview}">
            <Border Background="White" BorderBrush="Black" BorderThickness="1" Focusable="True">
                <local:ColorPicker x:Name="Picker"
                           Width="285" Height="160"
                           SelectedColorChanged="Picker_SelectedColorChanged"/>
            </Border>
        </Popup>

    </Grid>
</UserControl>
